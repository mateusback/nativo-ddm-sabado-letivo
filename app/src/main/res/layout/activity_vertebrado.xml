<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Vertebrado" />

    <EditText
        android:id="@+id/etIdade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Idade"
        android:inputType="number" />

    <EditText
        android:id="@+id/etEspecie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="EspÃ©cie" />

    <EditText
        android:id="@+id/etTipoColuna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tipo de Coluna Vertebral" />

    <EditText
        android:id="@+id/etGrupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Grupo" />

    <Button
        android:id="@+id/btnAdicionar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar Vertebrado" />

    <Button
        android:id="@+id/btnAtualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Atualizar Vertebrado" />

    <Button
        android:id="@+id/btnDeletar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deletar Vertebrado" />

    <ListView
        android:id="@+id/listViewVertebrados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice" />

</LinearLayout>
